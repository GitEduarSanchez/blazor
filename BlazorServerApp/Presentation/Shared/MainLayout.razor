@using static MudBlazor.Icons.Material
@inherits LayoutComponentBase

<PageTitle>Presentation</PageTitle>

<MudThemeProvider />
<MudPopoverProvider />
<MudDialogProvider />
<MudSnackbarProvider />
<MudLayout>
    <MudDrawer Open="true" ClipMode="DrawerClipMode.Always" Elevation="4">
        <NavMenu />
    </MudDrawer>

    <MudMainContent>
        <MudAppBar Elevation="4">
            <MudText Typo="Typo.h6">Presentation</MudText>
            <MudSpacer />
            <MudButton Color="Color.Inherit" Href="https://docs.microsoft.com/aspnet/" Target="_blank">About</MudButton>
        </MudAppBar>

        <article class="content px-4">
            @Body
        </article>
    </MudMainContent>
</MudLayout>
